    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <title>Registro Unidades de aprendizaje</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <a class="navbar-brand" href="#"></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">


        </div>
    </nav>
    <div class="form">
        <form action="/registrarUnidad" method="POST">
            <div class="container mt-4">
                <div class="card border-secondary">
                    <center>
                        <H2>
                            <div class="card-header">Nueva Unidad de aprendizaje</div>
                        </H2>
                    </center>
                    <div class="card-body">
                                <div class="form-row">
                                    <div class="col">
                                        <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre Unidad" required>
                                    </div>

                                    <div class="col">
                                        <input type="number" id="horasclase" name="horasclase" min="1" max="5" class="form-control" placeholder="Horas clase" required>
                                    </div>
                                    <div class="col">
                                        <input type="number" id="horastaller" name="horastaller" min="1" max="5" class="form-control" placeholder="Horas taller" required>
                                    </div>
                                    <div class="col">
                                        <input type="number" id="horaslab" name="horaslab" min="1" max="5" class="form-control" placeholder="Horas Laboratorio" required>
                                    </div>

                                </div>
                    </div>
        </form>
        <center>
            <button type="submit" class="btn btn-outline-success" tabindex="5">Guardar</button>
            <a href="/" class="btn btn-outline-secondary">Cancelar</a>
        </center>
        <br>
        </form>
    </div>
    </div>
    </div>

    </div>
    </form>
    </div>
